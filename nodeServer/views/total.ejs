<html>
    <head>
        <link rel="stylesheet" href="website/style.css">
        <title>Flow Finder</title>
        <meta charset="utf-8">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
    </head>
    <% include style %>
    <body>
    	<%include navbar %>
	<div id="chart">
            <canvas id="myChart"></canvas>
        </div>
	<script>
	    var names = [];
	    var totLitres = [];
	    <% for (var i = 0; i < data.length; i++){%>
		names.push("<%= data[i].name %>");
		totLitres.push(<%= data[i].totalLitres %>);
            <%}%>
            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                responsize: true,
                data: {
                    labels: names,
                    datasets: [{
                        label: 'Total Water Consumption (Gallons)',
                        data: totLitres,
                        
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }
                }
            });
 
        </script>    
    
    </body>
</html>
